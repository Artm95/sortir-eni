<header >
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark" style="background-color: rgba(0,0,10,0.5)">
        <a class="navbar-brand" href="{{ path('event') }}">
            <div >
                <img src="{{ asset('images/logo.png') }}" alt="logo" style="max-width: 100%; max-height: 100%">
            </div>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        {% if app.user %}
        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
            <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link {{ app.request.get('_route') == 'event' ? 'active' :'' }}" href="{{path('event')}}">Accueil</a>
            </li>
            {% if app.user.isAdmin %}
            <li class="nav-item">
                <a class="nav-link" href="{{path('admin_cities')}}">Villes</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('admin_campuses') }}">Campus</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{path('admin_users')}}">Utilisateurs</a>
            </li>
            {% endif %}
            <li class="nav-item">
                <a class="nav-link {{ app.request.get('_route') == 'participant_edit' ? 'active' :'' }}" href="{{path('participant_edit')}}">Mon profil</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{path('app_logout')}}">Se deconnecter</a>
            </li>
            </ul>
            {# <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form> #}
        </div>
        {% endif %}
    </nav>
    <div style="height: 60px;"></div>
</header>