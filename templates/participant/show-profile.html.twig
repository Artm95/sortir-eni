{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.nickname ?:  user.firstName ~ " " ~ user.lastName }}{% endblock %}

{% block body %}
    <div class="card">

        <div class="row">
            <div class="col-12 col-md-4">
                <div style="height: 250px; width: 400px">
                    {% if user.photo %}
                        <img style="max-width: 100%; max-height: 100%" src="{{ asset('uploads/'~user.photo) }}" alt="user avatar">
                    {% else %}
                        <img style="max-width: 100%; max-height: 100%" src="{{ asset('images/default-avatar.png') }}" alt="user avatar">
                    {% endif %}
                </div>

            </div>
            <div class="col-12 col-md-8">
                <h3 class="mb-4 text-center">{{ user.nickname ?:  user.firstName ~ " " ~ user.lastName }}</h3>
                <div class="row mb-2 justify-content-center text-center">
                    <div class="col-3">Prénom : </div>
                    <div class="col-6">{{ user.firstName }}</div>
                </div>
                <div class="row mb-2 justify-content-center text-center">
                    <div class="col-3">Nom :</div>
                    <div class="col-6">{{ user.lastName }}</div>
                </div>
                <div class="row mb-2 justify-content-center text-center">
                    <div class="col-3"><i class="fas fa-phone"></i></div>
                    <div class="col-6">{{ user.phoneNumber }}</div>
                </div>
                <div class="row mb-2 justify-content-center text-center">
                    <div class="col-3"><i class="far fa-envelope"></i></div>
                    <div class="col-6">{{ user.email }}</div>
                </div>
                <div class="row mb-2 justify-content-center text-center">
                    <div class="col-3"><i class="fas fa-university"></i></div>
                    <div class="col-6">{{ user.campus.name }}</div>
                </div>
            </div>
        </div>
        <a href="{{path("event")}} " class="btn btn-dark">Retour à l'accueil</a>
    </div>
{% endblock %}