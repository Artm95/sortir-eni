{% extends 'base.html.twig' %}
{% form_theme cancelForm 'bootstrap_4_layout.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}

    <div class="card m-auto">
        <div class="banner">

        </div>

        <div class="card-body">
            <div class="row">
                    <div class="col-6"><h2 class="card-title mb-4">Annulation de la sortie : {{ event.name }}</h2></div>

            </div>
            <p class="mb-2"><i class="far fa-calendar-alt mr-2"></i>{{ event.startDate|date('d/m/Y H:m') }}</p>
            <p class="mb-2"><i class="fas fa-university mr-2"></i>{{ event.campus.name }}</p>
            <p class="mb-2"><i class="fas fa-map-marker-alt mr-2"></i>{{event.location.name}} {{event.location.street}}</p>
            {{ form_start(cancelForm)}}
            {{ form_widget(cancelForm)}}
            <button type="submit" class="btn btn-primary">Enregistrer</button>
            <a href="{{path('event')}}" class="btn btn-secondary">Annuler</a>
            {{ form_end(cancelForm)}}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        .banner{
            height: 200px;
            background-image: url("{{ asset('images/default-event-details.jpg') }}");
        }
    </style>

{% endblock %}